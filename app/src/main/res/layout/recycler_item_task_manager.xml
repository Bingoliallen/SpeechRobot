<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLinerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    android:layerType="software"
    android:background="@drawable/task_manager_item_tv_shape"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout

        android:layout_marginLeft="6dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="北京房产销售任务1"
            android:textColor="#ff2c393f"
            android:textSize="6sp" />

        <LinearLayout
            android:id="@+id/iv_changed"
            android:layout_marginLeft="0dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center">
        <ImageView
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:src="@drawable/caidan" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progress_bar_task"
            style="@style/mProgressBar1"
            android:layout_width="0dp"
            android:progress="39"
            android:layout_weight="1"
            android:layout_height="1.5dp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="进行中"
            android:textColor="#ff02c1de"
            android:textSize="4sp" />
    </LinearLayout>

    <TextView

        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度   325/1000"
        android:singleLine="true"
        android:textColor="#ff8995a0"
        android:textSize="4sp" />

    <TextView

        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:id="@+id/tv_robot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="机器坐席号码：13855556666"
        android:singleLine="true"
        android:textColor="#ff57636f"
        android:textSize="5sp" />

    <TextView

        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/tv_create"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="周杰伦创建于2018-02-01 09:30"
        android:textColor="#ff57636f"
        android:textSize="5sp" />


</LinearLayout>
