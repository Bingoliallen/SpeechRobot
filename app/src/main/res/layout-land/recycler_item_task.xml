<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="15dp"
  android:background="@drawable/round5_app_theme2">

  <TextView
    android:id="@+id/tv_name"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:textColor="@color/common_app_text_theme7"
    android:textSize="@dimen/text_size4"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:layout_marginRight="15dp"
    android:textSize="@dimen/text_size5"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ProgressBar
    android:id="@+id/progress_bar_task"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="0dp"
    android:layout_height="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="21dp"
    app:layout_constraintBottom_toBottomOf="@+id/tv_status"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/tv_status"
    app:layout_constraintTop_toTopOf="@+id/tv_status" />

  <TextView
    android:id="@+id/tv_progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:textColor="@color/common_app_text_theme3"
    android:textSize="@dimen/text_size7"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/progress_bar_task" />

  <TextView
    android:id="@+id/tv_robot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textColor="@color/common_app_text_theme2"
    android:textSize="@dimen/text_size5"
    app:layout_constraintLeft_toLeftOf="@+id/tv_progress"
    app:layout_constraintTop_toBottomOf="@+id/tv_progress" />

  <TextView
    android:id="@+id/tv_create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textColor="@color/common_app_text_theme2"
    android:textSize="@dimen/text_size5"
    app:layout_constraintLeft_toLeftOf="@+id/tv_progress"
    app:layout_constraintTop_toBottomOf="@+id/tv_robot" />
</android.support.constraint.ConstraintLayout>